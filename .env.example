# Docker Services
DOCKER_FRONTEND_SERVICE=frontend                 # Frontend service name in Docker
DOCKER_MARKET_ANALYSIS_SERVICE=market_analysis   # Market Analysis service name
DOCKER_TRADE_MANAGER_SERVICE=trade_manager       # Trade Manager service name
DOCKER_TRADE_DISCOVERY_SERVICE=trade_discovery   # Trade Discovery service name
DOCKER_PROMETHEUS_SERVICE=prometheus             # Prometheus monitoring service
DOCKER_GRAFANA_SERVICE=grafana                   # Grafana dashboard service

# Public Docker Service Names
NEXT_PUBLIC_DOCKER_FRONTEND_SERVICE=frontend                 # Public frontend service name
NEXT_PUBLIC_DOCKER_MARKET_ANALYSIS_SERVICE=market_analysis   # Public Market Analysis service
NEXT_PUBLIC_DOCKER_TRADE_MANAGER_SERVICE=trade_manager       # Public Trade Manager service
NEXT_PUBLIC_DOCKER_TRADE_DISCOVERY_SERVICE=trade_discovery   # Public Trade Discovery service

# Service Ports
FRONTEND_PORT=3000          # Next.js frontend port
MARKET_ANALYSIS_PORT=8000   # Market Analysis service port
TRADE_MANAGER_PORT=8001     # Trade Manager service port
TRADE_DISCOVERY_PORT=8002   # Trade Discovery service port
PROMETHEUS_PORT=9090        # Prometheus metrics port
GRAFANA_PORT=3001           # Grafana dashboard port

# Grafana Configuration
GRAFANA_ADMIN_USER=admin               # Grafana admin username
GRAFANA_ADMIN_PASSWORD=your_password   # Grafana admin password (change this)

# API Configuration
API_BASE_URL=/api                # Base URL for API endpoints
NEXT_PUBLIC_API_BASE_URL=/api    # Public API base URL
API_HOST=0.0.0.0                 # API host (0.0.0.0 for all interfaces)
NEXT_PUBLIC_API_HOST=localhost   # Public API host for client access

# Docker Configuration
DOCKER_NETWORK_NAME=trading_system_net    # Docker network name
DOCKER_HOST=unix:///var/run/docker.sock   # Docker socket path

# Project Paths
MARKET_ANALYSIS_PATH=../market-analysis   # Path to Market Analysis service
TRADE_MANAGER_PATH=../trade-manager       # Path to Trade Manager service
TRADE_DISCOVERY_PATH=../trade-discovery   # Path to Trade Discovery service

# Development Settings
NODE_ENV=development        # Node environment (development/production)
NEXT_TELEMETRY_DISABLED=1   # Disable Next.js telemetry
WATCHPACK_POLLING=true      # Enable file watching in Docker
CHOKIDAR_USEPOLLING=true    # Enable polling for file changes
DEBUG=false                 # Enable debug mode

# Python Settings
PYTHONPATH=/app   # Python path for services

# GitHub Configuration
GITHUB_TOKEN=github_pat_YOUR_TOKEN_HERE   # GitHub personal access token